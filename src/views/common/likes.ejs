<% 
    likes.forEach(function(like) { 
    let tags = like.json.tags;
    let metatags = tags.map(s => '<a href="/tags/'+s+'">#'+s+'</a>').join(' ');
    let catg = like.json.category; let category = catg.charAt(0).toUpperCase() + catg.slice(1);
%>   
<div>
    <div class="inner-card-wrapper">
        <div class="card-userPic-wrapper">
            <a href="/profile/<%- like.author %>"><%if(like.user){%><div><img alt="<%- like.author %>" width="100%" height="49px" src="<%- like.user.profile.avatar%>" style="home_pro_pic"></div><%}else{%><div><img alt="<%- like.author %>" width="100%" height="49px" src="/images/user.png" class="home_pro_pic"></div><%}%></a>
        </div>
        <div class="card-content-wrapper">
            <div class="card-content-header">
                <div class="card-header-detail"><span class="card-header-username"><a href="/profile/<%- like.author %>">@<b><%- like.author %></b></a></span><span> <small style="color: #657786;">in</small> <a href="/category/<%- (like.json.category).toLowerCase() %>" style="color:#45b1f3;"><%- category %></a></span><span class="card-header-dot">Â·</span><span class="card-header-date"><%- moment.utc(like.ts).fromNow()%></span></div>
                <div class="card-header-more"></div>
            </div>
            <div class="card-content-info" style="font-weight: 600;padding-top: 10px"><a href="/post/<%- like.author %>/<%- like.link %>"><%- like.json.title %></a></div>
            <div class="card-content-info" style="color:#45b1f3;padding: 8px 0 4px 0;"><%- metatags.toString() %></div>
            <div class="card-content-images">
                <a href="/post/<%- like.author %>/<%- like.link %>"><div class="card-image-link"><img alt="" src="<%- like.json.image %>"></div></a>
            </div>
            <div class="card-buttons-wrapper">
                <div class="card-button-wrap heart-wrap" style="justify-content: space-between;">
                    <div class="card-icon heart-icon">
                    </div>
                    <div class="card-icon-value" style="opacity: 1;"><%- like.likes %> Likes</div>
                </div>
                <div class="card-button-wrap"><%- (like.likes)*0.1 %> TOK</div>
            </div>
        </div>
    </div>
</div>
<% }) %>
